# Server Configuration
PORT=5000
NODE_ENV=production
TRUST_PROXY=true
FRONTEND_URL=https://yourdomain.com

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration
DB_TYPE=memory
DATABASE_URI=
DB_POOL_SIZE=10
DB_CONNECT_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
RATE_LIMIT_MAX_DEV=1000

# Security
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRY=24h
BCRYPT_ROUNDS=10
API_KEY=your-api-key-for-admin-routes-change-in-production

# Caching
CACHE_ENABLED=false
CACHE_TYPE=memory
CACHE_TTL=3600
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DESTINATION=console

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_DESTINATION=./uploads

# Email Configuration (optional)
EMAIL_ENABLED=false
EMAIL_SERVICE=smtp
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@yourdomain.com
